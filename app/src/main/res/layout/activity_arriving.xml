<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".act.MapsActivity"
            />

        <RelativeLayout
            android:id="@+id/RRtoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            >

            <ImageView
                android:id="@+id/Imgback"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/arw_left"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                >

            </ImageView>

            <TextView
                android:id="@+id/titler"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arriving"
                android:textColor="@color/black_new"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llDriver"
            android:background="@drawable/border_white_top"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_toLeftOf="@+id/llPard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/txtDriverName"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patrick"
                        android:textColor="@color/black_new"
                        android:textSize="@dimen/_12sdp"
                        />

                    <TextView
                        android:id="@+id/txt"
                        android:layout_below="@+id/txtDriverName"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volkswagen Jetta"
                        android:textColor="@color/black_new"
                        android:textSize="@dimen/_12sdp"
                        />

                    <RelativeLayout
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_below="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/cardCall"
                            app:cardCornerRadius="@dimen/_360sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            >
                            <ImageView
                                android:scaleType="fitXY"
                                android:src="@drawable/call"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                            </ImageView>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardCancel"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_toRightOf="@+id/cardCall"
                            app:cardCornerRadius="@dimen/_360sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            >
                            <ImageView
                                android:scaleType="fitXY"
                                android:src="@drawable/cros"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                >

                            </ImageView>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llPard"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/border_yellow_new"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    >

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/buldozer">

                    </ImageView>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Bulldozer"
                        android:textColor="@color/gra"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/doloer"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="70.00"
                        android:textColor="@color/black_new"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_bg_yellow_20"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text="3 min"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:background="@color/gray_light"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="2sp">

            </View>

            <TextView
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_7sdp"
                android:paddingLeft="@dimen/_7sdp"
                android:background="@drawable/btn_bg_gray"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HS785K"
                android:textColor="@color/black_new"
                android:textSize="@dimen/_12sdp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="-50dp"
            android:layout_above="@+id/llDriver"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circle_border"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            >

            <androidx.cardview.widget.CardView
                android:layout_centerInParent="true"
                app:cardCornerRadius="@dimen/_360sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivDriverPropic"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/user_default" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

</layout>
