<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@mipmap/blackout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:background="@drawable/bg_white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_400sdp"
                >


                <ImageView
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/sucess_icon"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    >

                </ImageView>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:id="@+id/txtDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride has Ended"
                    android:textColor="@color/black_new"
                    android:textSize="@dimen/_16sdp"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_below="@id/imgDrawer"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <RelativeLayout
                        android:padding="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/imgLocation"
                            android:src="@drawable/location_bar"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_40sdp"
                            >

                        </ImageView>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_toRightOf="@+id/imgLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:maxLines="2"
                                android:id="@+id/txtOne"
                                android:textColor="@color/gra"
                                android:textSize="@dimen/_14sdp"
                                android:text="1 Ash Park, Pembroke Dock, SA72"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                            <View
                                android:background="@color/gray_light"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="1sp">

                            </View>

                            <TextView
                                android:maxLines="2"
                                android:id="@+id/txtTwo"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/gra"
                                android:textSize="@dimen/_14sdp"
                                android:text="54 Hollybank Rd, Southampton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>


                        </LinearLayout>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/edt_bg_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    >

                    <TextView
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/doloer"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black_new"
                        android:textSize="@dimen/_16sdp"
                        android:gravity="center"
                        android:text="154.75"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_10sdp"
                    android:id="@+id/RRPayment"
                    android:background="@drawable/btn_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    >

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/txtUser"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        android:gravity="center"
                        android:text="@string/collect_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
