<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <fragment
            android:id="@+id/mapAriaval"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".act.MapsActivity"
            />

        <RelativeLayout
            android:id="@+id/RRtoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            >

            <ImageView
                android:visibility="gone"
                android:id="@+id/Imgback"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/arw_left"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                >
            </ImageView>

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_feedback"
                android:textColor="@color/black_new"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/llDriver"
            android:background="@drawable/border_white_top"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txt"
                android:layout_below="@+id/txtDriverName"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patrick"
                android:textColor="@color/black_new"
                android:textSize="@dimen/_12sdp"
                />


            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:src="@drawable/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

                <ImageView
                    android:src="@drawable/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

                <ImageView
                    android:src="@drawable/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

                <ImageView
                    android:src="@drawable/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

                <ImageView
                    android:src="@drawable/rate_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excellent"
                android:textColor="@color/black_new"
                android:textSize="@dimen/_12sdp"
                />

            <EditText
                android:gravity="left"
                android:padding="@dimen/_10sdp"
                android:hint="@string/message"
                android:background="@drawable/edt_bg_one"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                >

            </EditText>

            <RelativeLayout
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/_10sdp"
                android:id="@+id/RRFeedBAck"
                android:background="@drawable/btn_bg_yellow_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                >

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="center"
                    android:text="@string/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RRCancel"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/btn_bg_yellow_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                >

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="center"
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="-50dp"
            android:layout_above="@+id/llDriver"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circle_border"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            >

            <androidx.cardview.widget.CardView
                android:layout_centerInParent="true"
                app:cardCornerRadius="@dimen/_360sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/user"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    >

                </ImageView>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

</layout>
