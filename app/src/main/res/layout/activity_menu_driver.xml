<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:background="@color/purple_200"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            >

            <LinearLayout
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/_360sdp"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    >

                    <ImageView
                        android:src="@drawable/user"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp">

                    </ImageView>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carson"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RRHome"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/black_new"
                android:textSize="@dimen/_16sdp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RRWallet"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WALLET"
                android:textColor="@color/black_new"
                android:textSize="@dimen/_16sdp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RREARNINGS"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EARNINGS"
                android:textColor="@color/black_new"
                android:textSize="@dimen/_16sdp"
                 />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RRPurchesPlan"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchase_plan"
                android:textColor="@color/black_new"
                android:textSize="@dimen/_16sdp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RRSignOut"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp">

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/red"
                android:textSize="@dimen/_16sdp" />


        </RelativeLayout>


    </LinearLayout>

</layout>
